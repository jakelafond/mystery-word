<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mystery Word</title>
  </head>
  <body>
    <h1>MYSTERY WORD</h1>
    {{#gameMode}}
    <h2>Please choose a difficulty:</h2>
    <div class="wrapper">
      <span>
        <form class="" action="/easy" method="post">
          <button class="mode" type="submit" name="button">Easy</button>
        </form>
      </span>
      <span>
        <form class="" action="/normal" method="post">
          <button class="mode" type="submit" name="button">Normal</button>
        </form>
      </span>
      <span>
        <form class="" action="/hard" method="post">
          <button class="mode" type="submit" name="button">Hard</button>
        </form>
      </span>
    </div>
    {{/gameMode}}
    {{^gameMode}}
    <h3>You have {{counter}} guesses left.</h3>
    <p>
      {{#underscores}}
      {{.}}
      {{/underscores}}
    </p>
    {{#youWin}}
      <h1>Congrats you won!</h1>
      <form class="" action="/playagain" method="post">
        <button type="submit" name="button">Play again?</button>
      </form>
    {{/youWin}}
    {{#youLose}}
      <p>You Lost! The final word is: </p> {{#secretWord}}{{.}} {{/secretWord}}</p>
      <form class="" action="/playagain" method="post">
        <button type="submit" name="button">Play again?</button>
      </form>
    {{/youLose}}
    {{#play}}
      <form class="" action="/" method="post">
        <input type="text" name="guess" value=""><button type="submit" name="button">Make a guess</button>
      </form>
    {{#errors}}
      <p style="color:red; font-weight:bold;">{{msg}}</p>
    {{/errors}}
    {{/play}}
    <p>Letters guessed:
      <span>
        {{#guesses}}
          {{.}}
        {{/guesses}}
      </span>
    </p>
    {{/gameMode}}
  </body>
</html>
